@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model IEnumerable<RecipeBox.Models.Recipe>

<h2>Recipes for @User.Identity.Name</h2>

@if (Model.Any())
{
  <div class="row row-cols-1 row-cols-md-2 g-3">
    @foreach(Recipe recipe in Model)
    {
      <div class="col">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId})</h5>
            <hr>
            <p class="card-text">@recipe.Instructions</p>
          </div>
        </div>
      </div>
    }
  </div>
}
else
{
  <p>No recipes added yet.</p>
}

<p>@Html.ActionLink("Add recipe", "Create")</p>