@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Add a new recipe</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new { @class = "form-label"})
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control"})

  @Html.LabelFor(model => model.Ingredients, new { @class = "form-label"})
  @Html.TextAreaFor(model => model.Ingredients, new { @class = "form-control"})

  @Html.LabelFor(model => model.Instructions, new { @class = "form-label"})
  @Html.TextAreaFor(model => model.Instructions, new { @class = "form-control"})

  @Html.Label("Select Tag")
  @Html.DropDownList("TagId", "Add Tag")

  <input type="submit" value="Save" class="btn btn-success" />
}