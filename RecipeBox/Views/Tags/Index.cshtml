@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model List<RecipeBox.Models.Tag>

<h2>Tags</h2>

@if(Model.Count == 0)
{
  <p>No tags have been added to the system yet.</p>
}
else
{
  <ul>
    @foreach (Tag tag in Model)
    {
      <li>@Html.ActionLink($"{tag.Name}", "Details", new { id = tag.TagId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a tag", "Create", "Tags")</p>